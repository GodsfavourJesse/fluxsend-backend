# Server Configuration
PORT=4000
NODE_ENV=production

# WebSocket Host (for clients to connect)
WS_HOST=fluxsend-backend.onrender.com

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://fluxsend.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_MAX_PAYLOAD=104857600
WS_PING_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Room Configuration
ROOM_EXPIRY_MS=300000
ROOM_CLEANUP_INTERVAL_MS=30000

# Security
ENABLE_ENCRYPTION=true

# Monitoring (optional)
ENABLE_STATS_ENDPOINT=true

# Logging
LOG_LEVEL=info